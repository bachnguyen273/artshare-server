@page
@model artshare_server.WebApp.Pages.RegisterModel
@{
	ViewData["Title"] = "Register page";
}

<!-- start banner Area -->
<section class="banner-area relative" id="home">
	<div class="overlay overlay-bg"></div>
	<div class="container">
		<div class="row fullscreen d-flex align-items-center justify-content-center">
			<div class="banner-content col-lg-8">
				<h1 class="text-white">
					Register
				</h1>
				<br />
				<form method="post">
					<div class="col-lg-12 col-md-12">
						<input asp-for="AccountRegisterViewModel.Email" placeholder="Email" class="common-input mb-20 form-control" required="" type="email">
						<input asp-for="AccountRegisterViewModel.Password" placeholder="Password" class="common-input mb-20 form-control" required="" type="password">
						<input asp-for="AccountRegisterViewModel.ConfirmPassword" placeholder="Confirm password" class="common-input mb-20 form-control" required="" type="password">
						<input asp-for="AccountRegisterViewModel.UserName" placeholder="Username" class="common-input mb-20 form-control" required="" type="text">
						<input asp-for="AccountRegisterViewModel.FullName" placeholder="Full name" class="common-input mb-20 form-control" required="" type="text">
						<input asp-for="AccountRegisterViewModel.PhoneNumber" placeholder="Phone number" class="common-input mb-20 form-control" required="" type="text">
						<select asp-for="AccountRegisterViewModel.Role" class="common-input mb-20 form-control">
							<option selected="selected" value="Audience">Audience</option>
							<option value="Creator">Creator</option>
						</select>
					</div>
					<div style="display: flex; flex-wrap: wrap; justify-content: center">
						<div asp-validation-summary="All" class="text-danger"></div>
					</div>
					@if (TempData["ErrorMessage"] != null)
					{
						<div class="alert alert-danger" role="alert">
							@TempData["ErrorMessage"]
						</div>
					}
					<button class="primary-btn text-uppercase">Register</button>
				</form>

			</div>
		</div>
	</div>
</section>