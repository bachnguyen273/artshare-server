@using Microsoft.AspNetCore.Http
@using System.IdentityModel.Tokens.Jwt
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor

@{
    var jwtToken = HttpContextAccessor.HttpContext.Session.GetString("JWTToken");
    string username = null;
    string role = null;
    if (jwtToken != null)
    {
        // Decode the token
        var handler = new JwtSecurityTokenHandler();
        var tokenS = handler.ReadToken(jwtToken) as JwtSecurityToken;
        username = tokenS.Claims.First(claim => claim.Type == "UserName").Value;
        role = tokenS.Claims.First(claim => claim.Type == ClaimTypes.Role).Value;
    }
}

