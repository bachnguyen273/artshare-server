@using Microsoft.AspNetCore.Http
@using System.IdentityModel.Tokens.Jwt
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="shortcut icon" href="img/fav.png">
    <!-- Author Meta -->
    <meta name="author" content="codepixer">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Art Museum</title>

    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <!--
    CSS
    ============================================= -->
    <link rel="stylesheet" href="~/css/linearicons.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>

    <!-- header navbar -->
    <header class="phucnvm-head">
        <nav class="phucnvm-nav">
            <div id="main">
                <button class="openbtn" onclick="openNav()">☰</button>
            </div>
            <div id="logo" style="margin-left: 50px">
                <a asp-page="/Index"><img src="~/img/logo.png" alt="" title="" /></a>
            </div>

            <form class="search-box" method="post">
                @if (Context.Session.GetString("Role") == null || Context.Session.GetString("Role").Equals("Audience"))
                {
                    <button type="submit" asp-page="/Index" asp-page-handler="Search"><span class="fa fa-search"></span></button>
                    <input type="text" name="SearchValue" placeholder="Search" id="myInput" />
                }
                else if (Context.Session.GetString("Role").Equals("Creator"))
                {
                    <button type="submit" asp-page="/Creators/Artworks/Index" asp-page-handler="Search"><span class="fa fa-search"></span></button>
                    <input type="text" name="SearchValue" placeholder="Search" id="myInput" />
                }
                
            </form>

            <ul class="phucnvm-ul">
                @if(Context.Session.GetString("Role") == null)
                {
                    <li><a asp-page="/Login"><span class="phucnvm-a"> Log In</span></a></li>
                    <li><a asp-page="/Register"><span class="phucnvm-a"> Register</span></a></li>
                }
                else if (Context.Session.GetString("Role").Equals("Audience"))
                {
                    <li><a asp-page="/Audiences/Cart"><span class="phucnvm-a"> Cart</span></a></li>
                    <li><a asp-page="/Audiences/Orders/Index"><span class="phucnvm-a"> Orders</span></a></li>
                    <li><a asp-page="/Audiences/Artworks/Index"><span class="phucnvm-a"> Artworks</span></a></li>
                    <li><a asp-page="/Profile/Detail"><span class="phucnvm-a"> @Context.Session.GetString("Username")</span></a></li>
                    <li><a asp-page="/Logout"><span class="phucnvm-a"> Logout</span></a></li>
                }
                else if (Context.Session.GetString("Role").Equals("Creator"))
                {
                    <li><a asp-page="/Creators/Artworks/Index"><span class="phucnvm-a"> Artwork</span></a></li>
                    <li><a asp-page="/Creators/Orders/AllOrdersOfCreator"><span class="phucnvm-a">Orders</span></a></li>
                    <li><a asp-page="/Profile/Detail"><span class="phucnvm-a"> @Context.Session.GetString("Username")</span></a></li>
                    <li><a asp-page="/Logout"><span class="phucnvm-a"> Logout</span></a></li>
                    <li><a asp-page="/Creators/Artworks/Create"><span class="phucnvm-btn"> Submit </span></a></li>
                }else{
                    <li><a asp-page="/Profile/Detail"><span class="phucnvm-a"> @Context.Session.GetString("Username")</span></a></li>
                    <li><a asp-page="/Logout"><span class="phucnvm-a"> Logout</span></a></li>
                }   
            </ul>
            <hr />
        </nav>
    </header>

    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
        <a href="#">About</a>
        <a href="#">Services</a>
        <a href="#">Clients</a>
        <a href="#">Contact</a>
    </div>
    @RenderBody()
    <!-- start footer Area -->
    <footer class="footer-area section-gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6>About Us</h6>
                        <p>
                            PRN231 - Art Sharing
                        </p>
                        <p class="footer-text">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a> and distributed by <a href="https://themewagon.com" target="_blank">ThemeWagon</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="~/js/vendor/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBhOdIF3Y9382fqJYt5I_sswSrEw5eihAA"></script>
    <script src="~/js/easing.min.js"></script>
    <script src="~/js/hoverIntent.js"></script>
    <script src="~/js/superfish.min.js"></script>
    <script src="~/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/js/justified.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/parallax.min.js"></script>
    <script src="~/js/mail-script.js"></script>
    <script src="~/js/main.js"></script>

    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .phucnvm-nav {
        background-color: #000000;
        top: 0;
        left: 0;
        right: 0;
        position: fixed;
        height: 60px;
        display: flex;
        padding-left: 20px;
        align-items: center;
        width: 100%;
        text-align: center;
        z-index: 20;
        border-bottom: 1px solid #363a42;
    }

    .search-box {
        display: flex;
        flex-direction: row;
        align-items: center;
        box-sizing: border-box;
        min-height: 34px;
        border: 2px solid #363a42;
        border-radius: 3px;
        margin-left: 180px;
        padding: 6px 8px;
        background: #06070d;
    }

        .search-box:hover {
            border-color: #5d5d6c;
        }

        .search-box:focus-within {
            border-color: #00e59b;
        }

        .search-box button {
            outline: none;
            background: none;
            border: none;
            color: #5d5d6c;
            cursor: pointer;
        }

        .search-box input {
            box-sizing: border-box;
            min-width: 300px;
            border: none;
            margin-left: 8px;
            background-color: #06070d;
            color: #fafafa;
        }

            .search-box input:focus {
                outline: none;
            }

    .phucnvm-ul {
        display: flex;
        margin-left: auto;
        align-items: center;
        height: 100%;
        width: 100%;
        justify-content: flex-end;
    }

        .phucnvm-ul li {
            margin-right: 50px;
        }

    .phucnvm-a {
        color: white;
        font-weight: 700;
        font-size: 18px;
        cursor: pointer;
    }

        .phucnvm-a:hover {
            color: #00e59b;
        }

    .phucnvm-btn {
        font-weight: 700;
        font-size: 18px;
        cursor: pointer;
        color: black;
        background: linear-gradient(121deg, #00f2ff, #00ff8a);
        padding: 5px 20px 5px 20px;
        text-align: center;
        border-radius: 5px;
    }

    .sidebar {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 1;
        top: 60px;
        left: 0;
        background-color: #06070d;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
    }

        .sidebar a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 20px;
            font-weight:400;
            color: #818181;
            display: block;
            transition: 0.3s;
        }

            .sidebar a:hover {
                color: #f1f1f1;
                background-color: #444;
            }

        .sidebar .closebtn {
            position: absolute;
            top: 0;
            right: 0px;
            font-size: 36px;
        }

    .openbtn {
        font-size: 20px;
        cursor: pointer;
        background-color: #06070d;
        color: white;
        padding: 10px 15px;
        border: none;
    }

        .openbtn:hover {
            background-color: #444;
        }
</style>