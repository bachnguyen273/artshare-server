                        @if(!string.IsNullOrEmpty(genreID.ToString())){
                            <a class="page-link" href="./Index?page=@pge&genre=@genreID">@pge</a>
                        }else if (!string.IsNullOrEmpty(searchVal))
                        {
                            <a class="page-link" href="./Index?page=@pge&searchVal=@searchVal">@pge</a>
                        }
