    <script>
        const rightArrow = document.querySelector(".right-arrow svg");
        const leftArrow = document.querySelector(".left-arrow svg");
        const tabsList = document.querySelector("._3rhcT");
        const rightArrowContainer = document.querySelector(".right-arrow");
        const leftArrowContainer = document.querySelector(".left-arrow ");
        const manageIcons = () => {
            if (tabsList.scrollLeft >= 15) {
                leftArrowContainer.classList.add("active1");
            } else {
                leftArrowContainer.classList.remove("active1");
            }
            let maxScroll = tabsList.scrollWidth - tabsList.clientWidth - 15;
            if (tabsList.scrollLeft >= maxScroll) {
                rightArrowContainer.classList.remove("active1");
            } else {
                rightArrowContainer.classList.add("active1");
            }
        };
        rightArrow.addEventListener("click", () => {
            tabsList.scrollLeft += 200;
            manageIcons();
        });
        leftArrow.addEventListener("click", () => {
            tabsList.scrollLeft -= 200;
            manageIcons();
        });
        tabsList.addEventListener("scroll", manageIcons);

    </script>

