@page
@model artshare_server.WebApp.Pages.Creators.Artworks.IndexModel
@{
    ViewData["Title"] = "Home page";
    var genre = Model.Genres;
    var artworks = Model.Artworks;
    var pager = Model.Pager;
    int pageNo = 0;
    if (pager != null)
    {
        pageNo = pager.CurrentPage;
    }
    int? genreID = Model.GenreID;
    string searchVal = Model.Search;
}
<!-- start banner Area -->
<div class="phucnvm-main">
    <div class="ioCwG">
        <header class="phucnvm-head">
            <div class="BJiPW">
                <span>Your artworks</span>
            </div>
        </header>
    </div>
    <div class="_333a">
        <div class="left-arrow">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
            </svg>
        </div>
        <form class="_3rhcT" method="post">
            @{
                if (genreID != null)
                {
                    <button asp-page="/Creators/Artworks/Index">All</button>
                }
                else
                {
                    <button class="active1" asp-page="/Creators/Artworks/Index">All</button>
                }
                foreach (var genres in genre)
                {
                    if (genreID != null && genres.genreId == genreID)
                    {
                        <button asp-route-id="@genres.genreId" class="active1">@genres.name</button>

                    }
                    else
                    {
                        <button asp-route-id="@genres.genreId">@genres.name</button>
                    }

                }
            }
        </form>
        <div class="right-arrow active1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
            </svg>

        </div>
    </div>
    <div class="phucnvm-artwork">
        <form method="post">
            @foreach (var art in artworks)
            {
                <button class="box" asp-page="/Creators/Artworks/Detail" asp-route-id="@art.artworkId">
                    <img src="@art.originalArtUrl" />
                    <div class="phucnvm-img-content">
                        <div style="flex:1;">
                            <span></span>
                        </div>
                        <div style="flex:1; display:flex;flex-direction:row">
                            <div style="flex:1;display:flex;flex-direction:column;align-content:center;justify-content:end">
                                <h4 style="color:white;">@art.title</h4>
                                <div style="margin-top:20px;">                                 
                                </div>
                            </div>
                            <div style="flex:1;display:flex;flex-direction:column;align-content:center;justify-content:end">
                                <div style="">
                                    <p style="color:white;display: inline-block">@art.commentCount</p>
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" style="width:15px;height:15px;color:white;display: inline-block">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 0 1 .865-.501 48.172 48.172 0 0 0 3.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
                                    </svg>
                                </div>


                                <div style="vertical-align:baseline">
                                    <p style="color:white;display: inline-block">@art.likeCount</p>
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" style="width:15px;height:15px;color:white; display: inline-block">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z" />
                                    </svg>

                                </div>
                            </div>
                        </div>


                    </div>
                </button>
            }
        </form>


    </div>

    <div style="padding-bottom: 50px">
        @if (pager.TotalPages > 0)
        {
            <ul class="pagination justify-content-center">
                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                {
                    <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                        @if (!string.IsNullOrEmpty(genreID.ToString()))
                        {
                            <a class="page-link" href="/Creators/Artworks/Index?page=@pge&genre=@genreID">@pge</a>
                        }
                        else if (!string.IsNullOrEmpty(searchVal))
                        {
                            <a class="page-link" href="/Creators/Artworks/Index?page=@pge&searchVal=@searchVal">@pge</a>
                        }
                        else
                        {
                            <a class="page-link" href="/Creators/Artworks/Index?page=@pge">@pge</a>
                        }
                    </li>
                }
            </ul>
        }
    </div>

    <script>
        const rightArrow = document.querySelector(".right-arrow svg");
        const leftArrow = document.querySelector(".left-arrow svg");
        const tabsList = document.querySelector("._3rhcT");
        const rightArrowContainer = document.querySelector(".right-arrow");
        const leftArrowContainer = document.querySelector(".left-arrow ");
        const manageIcons = () => {
            if (tabsList.scrollLeft >= 15) {
                leftArrowContainer.classList.add("active1");
            } else {
                leftArrowContainer.classList.remove("active1");
            }
            let maxScroll = tabsList.scrollWidth - tabsList.clientWidth - 15;
            if (tabsList.scrollLeft >= maxScroll) {
                rightArrowContainer.classList.remove("active1");
            } else {
                rightArrowContainer.classList.add("active1");
            }
        };
        rightArrow.addEventListener("click", () => {
            tabsList.scrollLeft += 200;
            manageIcons();
        });
        leftArrow.addEventListener("click", () => {
            tabsList.scrollLeft -= 200;
            manageIcons();
        });
        tabsList.addEventListener("scroll", manageIcons);

    </script>

</div>

<style>
    .phucnvm-main {
        background: #06070d;
    }

    .ioCwG {
        background-color: #161a1f;
    }

    .phucnvm-head {
        position: relative;
        height: 60px;
        padding: 0 40px;
        width: 100%;
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        grid-template-rows: auto min-content;
        grid-template-areas:
            "leftside navigation rightside"
            "subheader subheader subheader";
        align-items: center;
    }

    .BJiPW {
        grid-area: leftside;
        box-sizing: border-box;
        overflow: hidden;
        margin-left: 100px;
    }

        .BJiPW span {
            font-size: 18px;
            font-weight: bold;
            color: white;
        }

    ._333a {
        position: sticky;
        z-index: 3;
        top: 55px;
        margin: 20px 24px -16px;
        padding: 16px;
        background: #06070d;
        overflow: hidden;
        margin-left: 130px;
        width: 1200px;
    }

        ._333a svg {
            width: 40px;
            height: 40px;
            padding: 8px;
            cursor: pointer;
            color: white;
            border-radius: 50%;
        }

    ._3rhcT {
        display: flex;
        gap: 10px;
        list-style: none;
        overflow-x: scroll;
        -ms-overflow-style: none;
        scrollbar-width: none;
        scroll-behavior: smooth;
    }

        ._3rhcT::-webkit-scrollbar {
            display: none;
        }

        ._3rhcT button {
            box-sizing: border-box;
            background: #161a1f;
            border-radius: 4px;
            cursor: pointer;
            border: 1px solid #363a42;
            display: inline-block;
            padding: 5px 12px;
            color: #fafafa;
            user-select: none;
            white-space: nowrap;
        }

            ._3rhcT button.active1 {
                border-color: #00e59b;
                color: white;
            }

    .left-arrow,
    .right-arrow {
        position: absolute;
        height: 100%;
        width: 10%;
        top: 0;
        display: none;
        align-items: center;
    }

        .left-arrow.active1,
        .right-arrow.active1 {
            display: flex;
        }

    .right-arrow {
        right: 0;
        justify-content: flex-end;
        background: linear-gradient(to left,#06070d 1%,transparent);
    }

    .left-arrow {
        left: 0;
        justify-content: flex-start;
        background: linear-gradient(to right,#06070d 1%,transparent);
    }

    ._333a svg:hover {
        background: #333;
    }

    .phucnvm-artwork {
        box-sizing: border-box;
        width: 1400px;
        margin: 20px auto;
        columns: 4;
        column-gap: 10px;
    }

    .box {
        width: 100%;
        margin-bottom: 10px;
        break-inside: avoid;
        outline: none;
        border: none;
        background: none;
        position: relative;
    }

        .box img {
            max-width: 100%;
            height: auto;
            border-radius: 15px;
            pointer-events: none;
        }

        .box .phucnvm-img-content {
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            position: absolute;
            background: rgba(0,0,0,0.6);
            display: flex;
            flex-direction: column;
            opacity: 0;
            transition: 0.6s;
        }

            .box .phucnvm-img-content:hover {
                opacity: 1;
                cursor: pointer;
            }
</style>