@page
@model artshare_server.WebApp.Pages.Creators.Artworks.CreateModel
@{
}

<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="container">
        <section class="gallery-area section-gap" id="gallery">
            <form method="post" enctype="multipart/form-data">
                <div class="col-lg-3 col-md-3 single-blog">
                    <div class="thumb">
                        @foreach (var watermark in Model.Watermarks)
                        {
                            <div>
                                <input type="radio" id="watermark_@(watermark.watermarkId)" asp-for="@Model.SelectedWatermarkId" value="@watermark.watermarkId" />
                                <label for="watermark_@(watermark.watermarkId)">
                                    <img src="@watermark.watermarkUrl" alt="Watermark" />
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="mt-10">
                    <input type="text" asp-for="@Model.CreateArtworkViewModel.Title" placeholder="Title" required class="single-input">
                </div>
                <div class="mt-10">
                    <input type="text" asp-for="@Model.CreateArtworkViewModel.Description" placeholder="Description" required class="single-input">
                </div>
                <div class="mt-10">
                    <input type="number" asp-for="@Model.CreateArtworkViewModel.Price" placeholder="Price" required class="single-input">
                </div>
                <div class="mt-10">
                    <!-- Use ASP.NET Core Tag Helper for file input -->
                    <input type="file" asp-for="@Model.CreateArtworkViewModel.OrginalArtworkFile" required class="single-input">
                </div>
                <div class="mt-10">
                    <!-- Combo box for selecting public/private -->
                    <select asp-for="@Model.CreateArtworkViewModel.Status" class="single-input" required>
                        <option value="">Select Status</option>
                        <option value="0">Public</option>
                        <option value="1">Private</option>
                    </select>
                </div>
                <div class="mt-10">
                    <!-- Checkboxes for selecting genres -->
                    @foreach (var genre in Model.Genres)
                    {
                        <div>
                            <input type="radio" id="genre_@(genre.genreId)" asp-for="@Model.CreateArtworkViewModel.GenreId" value="@genre.genreId" />
                            <label for="genre_@(genre.genreId)">
                                @genre.name
                            </label>
                        </div>
                    }
                </div>
                <button type="submit" class="primary-btn text-uppercase">Submit</button>
            </form>
        </section>
    </div>
</section>

