@page
@model artshare_server.WebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login page";
}

<!-- start banner Area -->
<section class="banner-area relative" id="home">
	<div class="overlay overlay-bg"></div>
	<div class="container">
		<div class="row fullscreen d-flex align-items-center justify-content-center">
			<div class="banner-content col-lg-8">
				<h1 class="text-white">
					Login
				</h1>
				<br />
				<form method="post">
					<div class="col-lg-12 col-md-12">
						<input asp-for="AccountViewModel.Email" placeholder="Enter your email" class="common-input mb-20 form-control" required="" type="email">
						<input asp-for="AccountViewModel.Password" placeholder="Enter your password" class="common-input mb-20 form-control" required="" type="password">
					</div>
					<button class="primary-btn text-uppercase">Login</button>
				</form>

			</div>
		</div>
	</div>
</section>